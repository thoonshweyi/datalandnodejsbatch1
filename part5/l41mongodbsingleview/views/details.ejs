<!DOCTYPE html>
<html lang="en">
<%- include('./layout/head.ejs')  %>
<body>
  
    <%- include('./layout/nav.ejs')  %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h3><%= post.title %></h3>

                        <p class="text-muted">Posted: <%= post.createdAt ? new Date(post.createdAt).toLocaleString() : "Unknown date" %></p>
                        
                        <h5 class="text-secondary mt-5"><%= post.subtitle %></h5>
                        <hr/>

                        <p><%= post.body %></p>

                        <div class="d-flex gap-2 mt-4">
                            <a href="/" class="btn btn-outline-secondary">Back</a>
                            <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit</a>
                            <form action="/posts/<%= post._id %>/delete>" method="POST" onsubmit="return confirm(`Are you sure you want to delete this post?`)">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./layout/footer.ejs')  %>
</body>
</html>