<!DOCTYPE html>
<html lang="en">
<%- include('./layout/head.ejs')  %>
<body>
    <%- include('./layout/nav.ejs')  %>

    <div>
        <div>
            <h1>Edit Post</h1>
            <% if(error){ %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
        </div>

        <div>
            <div class="content">
                <form action="/posts/<%= post._id %>/edit" method="POST">
                    <div>
                        <label for="">Post Title</label>
                        <!-- <input type="text" name="title" id="title" value="<%= post ? post.title : '' %>"> -->
                        <input type="text" name="title" id="title" value="<%= post.title || '' %>">
                    </div>

                    <div>
                        <label for="">Post Sub Title</label>
                        <input type="text" name="subtitle" id="subtitle" value="<%= post ? post.subtitle : '' %>">
                    </div>

                    <div>
                        <label for="body">Body</label>
                        <textarea name="body" id="body"><%= post ? post.body : '' %></textarea>
                    </div>
                    <button type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>


    
    <%- include('./layout/footer.ejs')  %>
</body>
</html>